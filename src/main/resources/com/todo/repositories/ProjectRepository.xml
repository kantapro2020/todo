<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.todo.repositories.ProjectRepository">

	<insert id="registerProject" parameterType="com.todo.beans.Project" useGeneratedKeys="true" keyProperty="id">
		<![CDATA[
			insert into projects
			(project_name, manager_id, company_id, created_at)
			VALUES
			(#{project_name}, #{manager_id}, #{company_id}, null);
		]]>
	</insert>

	<select id="getProjectList" parameterType="java.lang.Integer" resultMap="getProjectList">
		<![CDATA[
		select
			id,
			project_name,
			manager_id,
			company_id,
			created_at
		from projects
		where company_id = #{company_id};
	]]>
	</select>

	<select id="getProject" parameterType="java.lang.Integer" resultMap="getProjectList">
		<![CDATA[
		select
			id,
			project_name,
			manager_id,
			company_id,
			created_at
		from projects
		where company_id = #{company_id};
	]]>
	</select>

	<resultMap type="com.todo.beans.Project" id="getProjectList">
		<result property="id" column="id"></result>
		<result property="project_name" column="project_name"></result>
		<result property="manager_id" column="manager_id"></result>
		<result property="company_id" column="company_id"></result>
		<result property="created_at" column="created_at"></result>
	</resultMap>

	<select id="getProjectUsersId" parameterType="java.lang.Integer" resultMap="getProjectUsersId">
		<![CDATA[
		select
			user_id
		from user_project
		where project_id = #{project_id};
		]]>
	</select>
	<resultMap type="java.lang.Integer" id="getProjectUsersId">
		<result column="user_id"></result>
	</resultMap>

</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.todo.repositories.TaskRepository">

	<insert id="registerProject" parameterType="com.todo.beans.Project" useGeneratedKeys="true" keyProperty="id">
		<![CDATA[
			insert into projects
			(project_name, manager_id, company_id, created_at)
			VALUES
			(#{project_name}, #{manager_id}, #{company_id}, #{created_at});
		]]>
	</insert>

	<select id="getProjectList" parameterType="map" resultMap="getProjectList">
		<![CDATA[
		select
			id,
			project_name,
			manager_id,
			company_id,
			created_at,
		from projects
		where id = #{id};
	]]>
	</select>
